{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ client.fullName }}</td>
            </tr>
            <tr>
                <th>Date_of_birth</th>
                <td>{{ client.dateOfBirth ? client.dateOfBirth|date('Y-F-d') : '' }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ client.owner }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ client.date ? client.date|date('Y-F-d') : '' }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ client.company().getName() }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-outline-secondary"  href="{{ path('clients_index') }}">back to list</a>

    <a class="btn btn-outline-primary" href="{{ path('clients_edit', {'id': client.id}) }}">edit</a>

    {{ include('clients/_delete_form.html.twig') }}


    <hr class="mt-5" /> 
    <h2>Addresses</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>City</th>
                <th>Zip_code</th>
                <th>Phone_number</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.address }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.zipCode }}</td>
                <td>{{ address.phoneNumber }}</td>
        </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
