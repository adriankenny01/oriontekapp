{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Full_name</th>
                <th>Date_of_birth</th>
                <th>Owner</th>
                <th>Date</th>
                <th>Company</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.fullName }}</td>
                <td>{{ client.dateOfBirth ? client.dateOfBirth|date('Y-F-d') : '' }}</td>
                <td>{{ client.owner }}</td>
                <td>{{ client.date ? client.date|date('Y-F-d') : '' }}</td>
                <td>{{ client.company.getName() }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('clients_show', {'id': client.id}) }}">show</a>
                    <a class="btn btn-outline-primary" href="{{ path('clients_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clients_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
