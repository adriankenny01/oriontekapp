{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-sm-12 col-md-6">
            <div class="card border-primary mb-3">
                <div class="card-header">Company</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">Total of companies : {{ companies_total }}</h5>
                        <p class="card-text">All companies registered in the database.</p>
                </div>
            </div>
        </div>  

        <div class="col-lg-4 col-sm-12 col-md-6">
            <div class="card border-secondary mb-3">
                <div class="card-header">Clients</div>
                <div class="card-body text-secondary">
                    <h5 class="card-title">Total of clients registered : {{ clients_total }}</h5>
                        <p class="card-text">All clients that are registered no matter what company is in charge.</p>
                </div>
            </div>
        </div>   

        <div class="col-lg-4 col-sm-12 col-md-6">
            <div class="card border-success mb-3">
                <div class="card-header">Users</div>
                <div class="card-body text-success">
                    <h5 class="card-title">Total of users : {{ users_total }}</h5>
                        <p class="card-text">Users that have access to the system administration.</p>
                </div>
            </div>
        </div>  

    </div>

</div>



{% endblock %}
